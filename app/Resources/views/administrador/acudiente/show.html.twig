{% extends "dashboard.html.twig" %}

{% block body %}
    <div class="col-lg-6">
        <h1>Acudiente</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ acudiente.id }}</td>
                </tr>
                <tr>
                    <th>Primer nombre</th>
                    <td>{{ acudiente.primerNombre }}</td>
                </tr>
                <tr>
                    <th>Segundo nombre</th>
                    <td>{{ acudiente.segundoNombre }}</td>
                </tr>
                <tr>
                    <th>Primer apellido</th>
                    <td>{{ acudiente.primerApellido }}</td>
                </tr>
                <tr>
                    <th>Segundo apellido</th>
                    <td>{{ acudiente.segundoApellido }}</td>
                </tr>
                <tr>
                    <th>Fecha nacimiento</th>
                    <td>{% if acudiente.fechaNacimiento %}{{ acudiente.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('acudiente_index') }}">Volver</a>
        <br>
        <a href="{{ path('acudiente_edit', { 'id': acudiente.id }) }}">Editar</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Eliminar">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

{% extends "dashboard.html.twig" %}

{% block body %}

    <div class="col-lg-12">
    <h2>Faltas</h2>
    	<table class="table table-bordered">
    		<thead>
    			<tr>
    				<th>No.</th>
    				<th>Falta</th>
    				<th>Descripci√≥n</th>
    				<th>Docente</th>
    				<th>Fecha</th>
    			</tr>
    		</thead>
    		<tbody>
    			{% for falta in faltas %}

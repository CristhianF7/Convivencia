{% extends "dashboard.html.twig" %}

{% block body %}
    <div class="col-lg-6">
    <h1>Lista de faltas</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Docente</th>
                <th>Descripción</th>
                <th>Fecha creación</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for faltum in faltas %}
            {% if faltum.estudiante.id == app.user.id %}
            <tr>
                <td><a href="{{ path('estudiante_falta_show', { 'id': faltum.id }) }}">{{ faltum.id }}</a></td>
                <td>{{ faltum.docente }}</td>
                <td>{{ faltum.descripcion }}</td>
                <td>{% if faltum.fechaCreacion %}{{ faltum.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('estudiante_falta_show', { 'id': faltum.id }) }}">Ver</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div>  
{% endblock %}

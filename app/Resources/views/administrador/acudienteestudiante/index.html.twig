{% extends "dashboard.html.twig" %}

{% block body %}
    <div class="col-lg-12">
    <h1>Lista de Acudientes - Estudiantes</h1>
   <ul>
        <li>
            <a href="{{ path('administrador_acudiente-estudiante_new') }}">Crear nueva asociación</a>
        </li>
    </ul>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parentesco</th>
                <th>Acudiente</th>
                <th>Estudiante</th>
                <th>Observación</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for acudienteEstudiante in acudienteEstudiantes %}
            <tr>
                <td><a href="{{ path('administrador_acudiente-estudiante_show', { 'id': acudienteEstudiante.id }) }}">{{ acudienteEstudiante.id }}</a></td>
                <td>{{ acudienteEstudiante.parentesco }}</td>
                <td>{{ acudienteEstudiante.acudiente }}</td>
                <td>{{ acudienteEstudiante.estudiante  }}</td>
                <td>{{ acudienteEstudiante.observacion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('administrador_acudiente-estudiante_show', { 'id': acudienteEstudiante.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('administrador_acudiente-estudiante_edit', { 'id': acudienteEstudiante.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
</div>
{% endblock %}

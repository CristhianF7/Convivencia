	    				<tr>
	    					<td>{{ loop.index }}</td>
	    					<td>{{ falta.estudiante }} 	    					
	    					</td>
	    					<td>{{ falta.descripcion }}</td>
	    					<td>{{ falta.docente }}</td>
	    					<td>{{ falta.fechaCreacion|date('d-M-Y H:i:s') }}</td>
	    				</tr>
    				{% endfor %}
    			{% endfor %}
    		</tbody>
    	</table>
    </div>
{% endblock %}
{% extends "dashboard.html.twig" %}

{% block body %}
<div class="col-lg-6">
    <h1>Falta</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faltum.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ faltum.descripcion }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{% if faltum.fechaCreacion %}{{ faltum.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('docentes_falta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('docentes_falta_edit', { 'id': faltum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
